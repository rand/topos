{
    "comments": {
        "lineComment": "//"
    },
    "brackets": [
        ["[", "]"],
        ["(", ")"],
        ["`", "`"],
        ["```", "```"]
    ],
    "autoClosingPairs": [
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "`", "close": "`" },
        { "open": "\"", "close": "\"" },
        { "open": "```", "close": "```" }
    ],
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["`", "`"],
        ["\"", "\""]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(Concept|Behavior|Invariant|Aesthetic|acceptance:).*:\\s*$",
        "decreaseIndentPattern": "^\\s*$"
    },
    "folding": {
        "markers": {
            "start": "^\\s*#",
            "end": "^\\s*(?=#)"
        }
    },
    "wordPattern": "[a-zA-Z_][a-zA-Z0-9_-]*",
    "onEnterRules": [
        {
            "beforeText": "^\\s*(Concept|Behavior|Invariant|Aesthetic)\\s+\\w+:\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*acceptance:\\s*$",
            "action": { "indent": "indent" }
        },
        {
            "beforeText": "^\\s*(given:|when:|then:).*$",
            "action": { "indent": "none" }
        }
    ]
}
